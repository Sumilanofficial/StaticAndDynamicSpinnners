<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ListViewFragment">
  <EditText
      android:layout_margin="30dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/etaddElement"
      android:hint="Add list element"
      android:inputType="text"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toTopOf="@+id/btnaddElement"
      />
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/btnaddElement"
      app:layout_constraintTop_toBottomOf="@+id/etaddElement"
      app:layout_constraintStart_toStartOf="@+id/etaddElement"
      app:layout_constraintEnd_toEndOf="@+id/etaddElement"
      android:text="Add Element"
    />


  <ListView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btnaddElement"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:id="@+id/listview"/>

</androidx.constraintlayout.widget.ConstraintLayout>