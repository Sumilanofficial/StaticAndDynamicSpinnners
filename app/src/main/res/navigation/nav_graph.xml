<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.matrix.spinnersandadapters.MainFragment"
        android:label="Options"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_spinnerFragment"
            app:destination="@id/spinnerFragment" />
        <action
            android:id="@+id/action_mainFragment_to_listViewFragment"
            app:destination="@id/listViewFragment" />
        <action
            android:id="@+id/action_mainFragment_to_baseAdapterFragment"
            app:destination="@id/baseAdapterFragment" />
    </fragment>
    <fragment
        android:id="@+id/spinnerFragment"
        android:name="com.matrix.spinnersandadapters.SpinnerFragment"
        android:label="Spinner"
        tools:layout="@layout/fragment_spinner" />
    <fragment
        android:id="@+id/listViewFragment"
        android:name="com.matrix.spinnersandadapters.ListViewFragment"
        android:label="fragment_list_view"
        tools:layout="@layout/fragment_list_view" />
    <fragment
        android:id="@+id/baseAdapterFragment"
        android:name="com.matrix.spinnersandadapters.BaseAdapterFragment"
        android:label="fragment_base_adapter"
        tools:layout="@layout/fragment_base_adapter" />
    <fragment
        android:id="@+id/credFragment"
        android:name="com.matrix.spinnersandadapters.CredFragment"
        android:label="fragment_cred"
        tools:layout="@layout/fragment_cred" />
</navigation>